@{
    Layout = null;

}

<html>
<head>

    <style>
        html {
            font-size: 12px;
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
    <title></title>


    @* <script src="~/Scripts/js/kendo.all.min.js"></script>*@
    <script src="~/Scripts/js/jquery.min.js"></script>


</head>
<style>
    #Home-div {
        background-color: #efeff4;
    }

    #Name-table {
        background-color: #efeff4;
        margin-left: 2%;
    }

    .item {
        margin-top: 10px;
        margin-left: 2%;
        margin-top: 5px;
        margin-bottom: 10px;
        width: 96%;
        background-color: #fff;
        border-radius: 10px;
    }

    .item-inside {
        border-bottom: 1px solid #e2dddd;
        margin-bottom: 0px;
        margin-top: 1px;
        margin-right: 5px;
        margin-left: 5px;
        background-color: #fff;
        padding-bottom: 0px;
        padding-top: 2px;
    }

    .button {
        text-decoration: none;
        color: #007aff;
        border-color: #f60;
        text-align: center;
        font-size: .7em;
        padding: .2em .8em;
        border: 1px solid currentcolor;
        border-radius: 3px;
    }
</style>
@* <script>

                    $(function () {
                        var navbar = parent.navbar;
                        navbar.title("收到的订单");

                    });

    </script>*@
<script>
    function redictfunction(x) {

        //var height1 = document.body.scrollHeight;
        //alert("haha");
        //switch里面对应相应的更改显示的页面url地址，自行修改指向自己的URL地址自行配置参数
        //  $("#myIframe").attr("Height", height1 - 30);
        var navbar = parent.navbar;

        switch (x) {
            case "receiveorder":



                navbar.title("收到的订单");
                window.location.href = "/../OrderDemo/Index?category=1";



                break;
            case "sendorder":

                navbar.title("发出的订单");
                window.location.href = "/../OrderDemo/Index?category=0";
                break;
            case "sendtranslation":

                navbar.title("收货单列表");
                window.location.href = "/../Transportation/Index?category=1";
                break;
            case "receivetranslation":

                navbar.title("发货单列表");
                window.location.href = "/../Transportation/Index?category=0";

                break;

            case "send":
                $("#myIframe").attr("src", "/../Transportation/AddTransportList");
                navbar.title('我要发货');
                break;

        }
    }



</script>
<body>
    <div id="Home-div">
        <table border="0" id="Name-table">
            <tr>
                <td><img src="/../CpcMain/get_Enlogo" style="border-radius:10px" width="70" height="70" alt="" /></td>
                <td>
                    <h4 style="margin-top:10px;margin-bottom:7px;padding-top:3px;">@ViewBag.Name</h4>
                    <h3 style="color:#808080;margin-top:1px">@ViewBag.UserName</h3>

                </td>
            </tr>

        </table>
        <div class="item">
            <div class="item-inside">
                <h3 style="color:#e2dddd;padding-top:10px;line-height:1px">订单信息</h3>
            </div>
            <div class="item-inside">
                <span style="font-size:medium;">
                    您发出的订单有 @ViewBag.sendordernum 条还未完成
                    <a class="button" style="float:right;margin-right:20px" onclick="redictfunction('sendorder')" href="#">点击查看</a>

                </span>
                <br />
                <div style="margin-top:10px;margin-bottom:5px">
                    <span style="font-size:medium;">您接受的订单有 @ViewBag.getordernum 条还未完成</span>
                    <a class="button" style="float:right;margin-right:20px;" href="#" onclick="redictfunction('receiveorder')">点击查看</a>
                </div>


            </div>

        </div>
        <div class="item">
            <div class="item-inside">
                <h3 style="color:#e2dddd;padding-top:10px;line-height:1px">物流信息</h3>
            </div>
            <div class="item-inside">
                <span style="font-size:medium;">
                    您发出的货物有 @ViewBag.sendtransporationnum 条还未被确认收货
                    <a class="button" style="float:right;margin-right:20px" href="#" onclick="redictfunction('sendtranslation')">点击查看</a>

                </span>
                <br />
                <div style="margin-top:10px;margin-bottom:5px">
                    <span style="font-size:medium;">您接受的货物有 @ViewBag.gettransporationnum 条未确认收货</span>
                    <a class="button" style="float:right;margin-right:20px;" href="#" onclick="redictfunction('receivetranslation')">点击查看</a>
                </div>


            </div>

        </div>




        <span style="margin-top:50px;margin-bottom:40px">&nbsp</span>

    </div>



</body>
</html>